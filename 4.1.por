programa {
	funcao inicio() {
			
		inteiro num1
		
		escreva ("digite um numero: " )
		leia(num1)

        se (num1 < 0){
            escreva ("negativo")
        }
            
        se(num1 > 0) {
            escreva ("positivo")
        } senao {
            escreva ("nulo")
        }

	
	}
}
